---
import Channel from './Channel.astro';

export interface Props {
	title: string;
	body: string;
	href: string;
	startTime: number;
  channel: string;
}
const { href, title, body, startTime, channel } = Astro.props as Props;
---

<li class="link-card">
	<a href={href}>
		<h2>
			{title}
		</h2>
		<p>
		    {startTime}
		</p>
		<p>
			{body}
		</p>
    <p>
      <Channel channel={channel}/>
    </p>
	</a>
</li>
