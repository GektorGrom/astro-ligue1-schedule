---
import getChannelLogo from '../lib/getChannelLogo';

export interface Props {
  channel: string;
}
const { channel } = Astro.props as Props;
const channelLink = getChannelLogo(channel);

---
<img src={`/assets/image/channel-logos/${channelLink}`} alt={channel} class="dark:brightness-75">

<style>
  img {
    width: 100%;
    max-width: 120px;
  }
  img[src*=Global] {
  width: 55%;
  max-width: 85px;
}
</style>
